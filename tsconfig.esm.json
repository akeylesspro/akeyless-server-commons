{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "moduleResolution": "node",
        "outDir": "./dist/esm",
        "declaration": true,
        "sourceMap": true,
        "rootDir": "./src",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
